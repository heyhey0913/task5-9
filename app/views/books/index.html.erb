<div class="container">
  <div class="row">
    <% if @nbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= @nbook.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
        <% @nbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="col-xs-3">
      <%= render 'users/userinfo', user: current_user%>
      <%= render 'users/bookcreate', book: @nbook %>
    </div>
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>

          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',  fallback: "no_image.jpg", size:'50x50' %>
              <% end %>
            </td>
            <td class="break"><%= link_to book.title, book_path(book.id) %></td>
            <td class="break"><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>