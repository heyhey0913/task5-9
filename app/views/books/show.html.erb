<div class="container">
  <div class="row">
    <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <div class="col-xs-3">
      <%= render 'users/userinfo', user: @book.user%>
      <%= render 'users/bookcreate', book: @nbook %>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td class="col-xs-5">
              <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
              <% end %>
              <br>
              <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
            </td>
            <td class="col-xs-1"><%= @book.title %></td>
            <td class="col-xs-1"><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
            <td class="col-xs-2"><%= link_to "Edit", edit_book_path(@book.id), :class => 'btn-sm btn-success' %></td>
            <td class="col-xs-3"><%= link_to "Destroy", "/books/#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか？" , :class => 'btn-sm btn-danger'%></td>
            <% end %>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>