<div class="container">
  <div class="row">
    <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <div class="col-xs-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'users/bookcreate', book: @nbook %>
    </div>
    <div class="col-xs-9">
      <div class="books_table">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
                <% end %>
              </td>
              <td class="break"><%= link_to book.title, book_path(book.id) %></td>
              <td class="break"><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
