<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/userinfo', user: current_user%>
      <%= render 'users/bookcreate', book: @nbook %>
    </div>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></td>
            <td class="break"><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>