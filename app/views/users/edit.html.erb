<div class="container">
  <h2 class="form-header-title">User info</h2>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-body">
    <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
    </div>
    <div class="field">
      <%= f.label :introduction %><br>
      <%= f.text_area :introduction%>
    </div>
    <div class="action">
      <%= f.submit "Update User"%>
    </div>
    <% end %>
  </div>
</div>